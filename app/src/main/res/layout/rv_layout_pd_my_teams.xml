<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="Subbu Spartans"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitEnd"
        android:src="@drawable/cricket_logo"
        app:layout_constraintEnd_toStartOf="@id/tv_sports"
        app:layout_constraintTop_toTopOf="@id/tv_sports"
        app:layout_constraintBottom_toBottomOf="@id/tv_sports"
        android:layout_marginEnd="7dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:text="Cricket"
        android:textSize="13sp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginEnd="16dp"

        />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/light_periwinkle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_team_name"

        />

</androidx.constraintlayout.widget.ConstraintLayout>