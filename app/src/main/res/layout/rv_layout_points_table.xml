<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_marginStart="16dp"
        style="@style/text_heading_small"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_played_matches_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        style="@style/text_heading_small"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="@string/played_matches_count"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_username"
        app:layout_constraintEnd_toStartOf="@id/tv_win_matches_count"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_win_matches_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_heading_small"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="@string/played_matches_count"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_loss_matches_count"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_loss_matches_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_heading_small"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:text="@string/played_matches_count"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_pts_count"
        app:layout_constraintEnd_toStartOf="@id/tv_pts_count"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_pts_count"
        style="@style/text_heading_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/played_matches_count"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_periwinkle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />





</androidx.constraintlayout.widget.ConstraintLayout>