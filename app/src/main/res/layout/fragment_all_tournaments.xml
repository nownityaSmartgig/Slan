<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.tournaments.AllTournamentsFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_tournament"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:text="@string/tournaments"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:background="@drawable/button_left_curve"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_league"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_league"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_right_curve"
        android:text="@string/leagues"
        app:layout_constraintTop_toTopOf="@id/bt_tournament"
        app:layout_constraintStart_toEndOf="@id/bt_tournament"
        app:layout_constraintBottom_toBottomOf="@id/bt_tournament"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:id="@+id/layout_sports_list"
        layout="@layout/layout_sports_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bt_tournament"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <include
        android:id="@+id/layout_league_list"
        layout="@layout/layout_league_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/bt_tournament"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>