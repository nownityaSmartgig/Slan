<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:id="@+id/cl_tournament_item"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_tournament_banner"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_event"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tvheading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        style="@style/text_heading"
        android:text="@string/tournament_names"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_tournament_banner"
        app:layout_constraintTop_toTopOf="@id/iv_tournament_banner"
        />

    <TextView
        android:id="@+id/tv_tournament_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_details"
        android:text="@string/tournament_date"
        app:layout_constraintStart_toStartOf="@+id/tvheading"
        app:layout_constraintTop_toBottomOf="@+id/tvheading" />

    <TextView
        android:id="@+id/tv_tournament_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_details"
        android:text="@string/game_location"
        app:layout_constraintStart_toStartOf="@+id/tv_tournament_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_tournament_date" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_tournament_banner" />



</androidx.constraintlayout.widget.ConstraintLayout>