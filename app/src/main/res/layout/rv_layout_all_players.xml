<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_player_name_heading"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Subbu Sp"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/all_players_text"
        android:layout_marginStart="16dp"
        android:textColor="#1019F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_phone_number_heading"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="7894561233"
        style="@style/all_players_text"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_player_name_heading"
        app:layout_constraintEnd_toStartOf="@id/tv_view_details_heading"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_view_details_heading"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:maxLines="1"
        android:textSize="9sp"
        android:text="View"
        android:textColor="@color/orange_red"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_outline_box_orange"
        android:paddingHorizontal="32dp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_goneMarginBottom="9dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number_heading"
        android:background="@color/light_periwinkle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="13dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>