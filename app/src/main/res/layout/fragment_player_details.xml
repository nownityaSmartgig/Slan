<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.players.PlayerDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_personal_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="13dp"
                    android:background="#F1F1F1"
                    android:paddingBottom="13dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/personal"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_personal_heading"

                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.35" />


                        <TextView
                            android:id="@+id/tv_name_heading"
                            style="@style/players_detail_heading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/players_detail_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Subbu SP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline_1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view_1"
                            style="@style/players_detail_heading_text"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_name_heading" />

                        <TextView
                            android:id="@+id/tv_gender_heading"
                            style="@style/players_detail_heading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_1" />


                        <TextView
                            android:id="@+id/tv_gender"
                            style="@style/players_detail_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline_1"
                            app:layout_constraintTop_toBottomOf="@id/view_1"

                            />

                        <View
                            android:id="@+id/view_2"
                            style="@style/players_detail_heading_text"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_gender_heading" />

                        <TextView
                            android:id="@+id/tv_dob_heading"
                            style="@style/players_detail_heading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Of Birth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_2" />


                        <TextView
                            android:id="@+id/tv_dob"
                            style="@style/players_detail_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="04/05/1995"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline_1"
                            app:layout_constraintTop_toBottomOf="@id/view_2"

                            />

                        <View
                            android:id="@+id/view_3"
                            style="@style/players_detail_heading_text"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_dob_heading" />

                        <TextView
                            android:id="@+id/tv_phn_num_heading"
                            style="@style/players_detail_heading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_3" />


                        <TextView
                            android:id="@+id/tv_phn_num"
                            style="@style/players_detail_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="8790960358"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline_1"
                            app:layout_constraintTop_toBottomOf="@id/view_3"

                            />

                        <View
                            android:id="@+id/view_4"
                            style="@style/players_detail_heading_text"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_phn_num_heading" />

                        <TextView
                            android:id="@+id/tv_email_id_heading"
                            style="@style/players_detail_heading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Id"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_4" />


                        <TextView
                            android:id="@+id/tv_email_id"
                            style="@style/players_detail_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Designframers@gmail.com"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline_1"
                            app:layout_constraintTop_toBottomOf="@id/view_4"

                            />

                        <View
                            android:id="@+id/view_5"
                            style="@style/players_detail_heading_text"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="11dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_email_id_heading" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_all_matches_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F1F1F1"
                    android:fontFamily="@font/ubuntu_medium"
                    android:paddingVertical="13dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/all_matches"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_personal" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_all_matches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_all_matches_heading"

                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_allMatches"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="5dp"
                        app:layoutManager="LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/rv_layout_pd_all_matches_list" />


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_my_teams_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="13dp"
                    android:background="#F1F1F1"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/my_teams"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_all_matches" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_my_teams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_teams_heading">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view_6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_team_name_mt_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Team Name"
                            android:textColor="@color/orange_red"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_6" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sports_mt_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Sports"
                            android:textColor="@color/orange_red"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_6"

                            />

                        <View
                            android:id="@+id/view_7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_team_name_mt_heading" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_my_teams"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            app:layoutManager="LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_7"
                            tools:itemCount="5"
                            tools:listitem="@layout/rv_layout_pd_my_teams" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_my_partner_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="13dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="My Partner"
                    android:background="#F1F1F1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_my_teams" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_my_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_partner_heading">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view_8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_team_name_mp_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Team Name"
                            android:textColor="@color/orange_red"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_8" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_sports_mp_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Sports"
                            android:textColor="@color/orange_red"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_8"

                            />

                        <View
                            android:id="@+id/view_9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="14dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_team_name_mp_heading" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_my_partner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_9"
                            tools:itemCount="5"
                            tools:listitem="@layout/rv_layout_pd_my_teams" />

                        <View
                            android:id="@+id/view_10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/light_periwinkle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rv_my_partner" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/siv_logo"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="21dp"
                            android:src="@drawable/ic_open_image_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view_10"
                            app:shapeAppearanceOverlay="@style/RoundCornerShapeAppearance_25" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Upload Logo"
                            android:textColor="@color/orange_red"
                            app:layout_constraintBottom_toBottomOf="@id/siv_logo"
                            app:layout_constraintStart_toEndOf="@id/siv_logo"
                            app:layout_constraintTop_toTopOf="@id/siv_logo"

                            />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="13dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:backgroundTint="@color/orange_red"
                            app:cornerRadius="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/siv_logo"

                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>