<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_score_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Scores"
        android:textColor="@color/light_periwinkle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_grey" />

    <TextView
        android:id="@+id/tv_tournamentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/leauge_name_one"
        android:textColor="@color/light_periwinkle"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score_heading" />

    <LinearLayout
        android:id="@+id/ll_match_number_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_close"
        app:layout_constraintTop_toBottomOf="@id/tv_tournamentName"
        >


        <TextView
            android:id="@+id/tv_match_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Match, Group A"
            android:textSize="12sp"

            android:textColor="@color/light_gray"
            android:fontFamily="@font/ubuntu_regular"
            />

        <TextView
            android:id="@+id/tv_match_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="B-SPORTS Madhapur"
            android:textSize="12sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/ubuntu_bold"

            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_match_number_location"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        >
        <include
            android:id="@+id/layout_table"
            layout="@layout/layout_score_table_editable"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Save"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:background="@color/orange_red"
        android:paddingHorizontal="70dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_table"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>