        android:id="@+id/tv_teamTwoScoreRFive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
