        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_2"
        app:layout_constraintEnd_toStartOf="@id/view_4"
        app:layout_constraintStart_toEndOf="@id/view_3"
        app:layout_constraintTop_toBottomOf="@id/viewH_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamOneScoreRThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_2"
        app:layout_constraintEnd_toStartOf="@id/view_5"
        app:layout_constraintStart_toEndOf="@id/view_4"
        app:layout_constraintTop_toBottomOf="@id/viewH_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamOneScoreRFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_2"
        app:layout_constraintEnd_toStartOf="@id/view_6"
        app:layout_constraintStart_toEndOf="@id/view_5"
        app:layout_constraintTop_toBottomOf="@id/viewH_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamOneScoreRFive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_2"
        app:layout_constraintEnd_toStartOf="@id/view_7"
        app:layout_constraintStart_toEndOf="@id/view_6"
        app:layout_constraintTop_toBottomOf="@id/viewH_1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamTwoScoreROne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_3"
        app:layout_constraintEnd_toStartOf="@id/view_3"
        app:layout_constraintStart_toEndOf="@id/view_2"
        app:layout_constraintTop_toBottomOf="@id/viewH_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamTwoScoreRTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_3"
        app:layout_constraintEnd_toStartOf="@id/view_4"
        app:layout_constraintStart_toEndOf="@id/view_3"
        app:layout_constraintTop_toBottomOf="@id/viewH_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamTwoScoreRThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
        android:outlineProvider="none"
        android:text=""
        android:gravity="center"
        android:textColor="@color/light_periwinkle"
        android:textSize="12sp"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/viewH_3"
        app:layout_constraintEnd_toStartOf="@id/view_5"
        app:layout_constraintStart_toEndOf="@id/view_4"
        app:layout_constraintTop_toBottomOf="@id/viewH_2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teamTwoScoreRFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/orange_red"
        android:maxLength="3"
        android:maxLines="1"
