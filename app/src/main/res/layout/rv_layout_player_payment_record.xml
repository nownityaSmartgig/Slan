<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tv_order_no_heading"
        style="@style/PlayerPaymentsHeadingTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_order_no"
        style="@style/PlayerPaymentsTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="17775558899775566332211"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_heading"
        style="@style/PlayerPaymentsHeadingTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_no_heading" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/PlayerPaymentsTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14/06/2023"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/tv_order_no" />

    <TextView
        android:id="@+id/tv_reg_for_heading"
        style="@style/PlayerPaymentsHeadingTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg.for"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_heading" />

    <TextView
        android:id="@+id/tv_reg_for"
        style="@style/PlayerPaymentsTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SLAN Chess Championship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <TextView
        android:id="@+id/tv_amt_paid_heading"
        style="@style/PlayerPaymentsHeadingTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amt. Paid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reg_for_heading" />

    <TextView
        android:id="@+id/tv_amt_paid"
        style="@style/PlayerPaymentsTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="700/-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/tv_reg_for" />

    <TextView
        android:id="@+id/tv_order_status_heading"
        style="@style/PlayerPaymentsHeadingTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amt_paid_heading" />

    <TextView
        android:id="@+id/tv_order_status"
        style="@style/PlayerPaymentsTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Initiated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/tv_amt_paid" />


</androidx.constraintlayout.widget.ConstraintLayout>