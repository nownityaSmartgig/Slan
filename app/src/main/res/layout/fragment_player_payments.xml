<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.players.PlayerPaymentsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/white"
            >


            <TextView
                android:id="@+id/tv_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date:"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_medium"
                app:layout_constraintBottom_toTopOf="@id/rl_from"
                app:layout_constraintStart_toStartOf="@id/rl_from"
                android:layout_marginTop="9dp"
                android:layout_marginStart="-1dp"
                />

            <RelativeLayout
                android:id="@+id/rl_from"
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_outline_light_rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <TextView
                    android:id="@+id/tv_date_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_weight="10"
                    android:paddingStart="2dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="center_vertical"
                    android:hint="10/06/2023"
                    android:textColorHint="@color/light_periwinkle"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/iv_calendar1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_gravity="end|center_vertical"

                    android:src="@drawable/ic_calendar_orange" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date:"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_medium"
                app:layout_constraintBottom_toTopOf="@id/rl_to"
                app:layout_constraintStart_toStartOf="@id/rl_to"
                android:layout_marginTop="9dp"
                android:layout_marginStart="-1dp"
                />
            <RelativeLayout
                android:id="@+id/rl_to"
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_outline_light_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <TextView
                    android:id="@+id/tv_date_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_weight="10"
                    android:paddingStart="2dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="center_vertical"
                    android:hint="10/06/2023"
                    android:textColorHint="@color/light_periwinkle"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/iv_calendar2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_gravity="end|center_vertical"

                    android:src="@drawable/ic_calendar_orange" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_player_payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                tools:itemCount="25"
                app:layoutManager="LinearLayoutManager"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/rv_layout_player_payment_record"
                android:paddingTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_from"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>