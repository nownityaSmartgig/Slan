<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.tournaments.ViewParticipantsFragment">




    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search"
        android:gravity="center_vertical"
        app:queryBackground="@android:color/transparent"
        android:background="@drawable/ic_outline_search_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="16dp"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="117dp"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="218dp"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintGuide_begin="239dp"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="272dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="311dp" />

            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/light_silver"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_event_name_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/text_detail_orange_large"
                app:layout_constraintStart_toEndOf="@id/guideline_1"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toTopOf="@id/view_2"
                android:text="@string/event_name_heading"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_participants_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/participants_heading"
                style="@style/text_detail_orange_large"
                app:layout_constraintStart_toEndOf="@id/guideline_2"
                app:layout_constraintEnd_toStartOf="@id/guideline_3"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toTopOf="@id/view_2"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_date_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                style="@style/text_detail_orange_large"
                app:layout_constraintStart_toEndOf="@id/guideline_4"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toTopOf="@id/view_2"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_registant_details_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registrant_details"
                style="@style/text_detail_orange_large"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toTopOf="@id/view_2"
                app:layout_constraintStart_toEndOf="@id/guideline_6"
                />

            <View
                android:id="@+id/view_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/light_silver"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_participants_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:itemCount="15"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/rv_layout_participant_list"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>